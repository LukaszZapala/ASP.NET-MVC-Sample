
@{
    ViewBag.Title = "Add";
}

<h2>Add</h2>

<!--Prosty formularz w którym uzupełniamy dane i wysyłamy je przy pomocy POST'a-->
<form class="form form-horizontal" action="/cat/Add" method="POST">
    <div class="form-group">
        <label>Name</label>
        <input type="text" name="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Type</label>
        <input type="text" name="PetType" class="form-control" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Add</button>
    </div>
</form>