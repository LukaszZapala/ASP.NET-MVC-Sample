
@{
    ViewBag.Title = "Add";
}

<h2>Add</h2>

<!--Prosty formularz w którym uzupełniamy dane i wysyłamy je przy pomocy POST'a-->
<form class="form form-horizontal" action="/cat/Add" method="POST">
    <div class="form-group">
        <label>Name</label>
        <input type="text" name="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Type</label>
        <select class="form-control" name="PetType">
            <option value="1">Dachowiec</option>
            <option value="2">Rufowiec</option>
            <option value="3">Pers</option>
            <option value="4">Rosyjski</option>
        </select>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-danger">Add</button>
    </div>
</form>