@model IEnumerable<FormsSample.Models.CatModel>
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>@Model.Count()</p>

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Type</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Type</td>
                <td>@Html.ActionLink("More", "Details", new { Id = item.Id }, new { @class = "btn btn-primary" })</td>
                <td>@Html.ActionLink("Delete", "Remove", new { Id = item.Id }, new { @class = "btn btn-primary" })</td>
            </tr>
        }
    </tbody>
</table>

<div>
    @Html.ActionLink("Add", "Add", new { }, new { @class = "btn btn-primary" })
</div>